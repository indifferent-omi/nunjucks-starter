{% macro normal(obj) %}
    <div class="widget {{obj.modifier}}">
        {% if obj.fontIcon %}
            <div class="widget-icon{{' ' + obj.iconWrapperClass if obj.iconWrapperClass}}">
                <i class="{{obj.fontIcon}}"></i>
            </div>
        {% endif %}
        {% if obj.iconImage %}
            <div class="widget-icon{{' ' + obj.iconWrapperClass if obj.iconWrapperClass}}">
                <img src={{obj.iconImage}} alt="icon">
            </div>
        {% endif %}
        {% if obj.image %}
            <div class="widget-image{{' ' + obj.iconWrapperClass if obj.iconWrapperClass}}">
                <img src={{obj.image}} alt="icon">
            </div>
        {% endif %}
        {% if obj.iconText %}
            <div class="widget-icon{{' ' + obj.iconWrapperClass if obj.iconWrapperClass}}">
                {{obj.iconText}}
            </div>
        {% endif %}
        <div class="widget-body">
            <h3 class='widget-title{{" " + obj.titleClass if obj.titleClass}}'>{{obj.title | safe}}</h3>
            <p class='widget-text{{" " + obj.textClass if obj.textClass}}'>{{obj.text | safe}}</p>
            {% if obj.custom %}
                {{obj.custom | safe}}
            {% endif %}
        </div>
    </div>
{% endmacro %}

