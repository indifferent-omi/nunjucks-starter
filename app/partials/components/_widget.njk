{% macro card(obj) %}
    <div class="widget widget-card widget-card-center {{obj.class}}">
        <div class="widget-icon">
            <img src="{{obj.icon}}" alt="widget" class="make-it-inline"/>
        </div>
        <div class="widget-text">
            <h3 class="widget-title heading-{{obj.mode}}">{{obj.title | safe}}</h3>
            <p class="text-{{obj.mode}}">{{obj.text | safe}}</p>
        </div>
    </div>
{% endmacro %}